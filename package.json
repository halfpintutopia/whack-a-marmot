{
  "name": "whack-a-marmot",
  "version": "1.0.0",
  "description": "The game Whack-A-Mole",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:sass": "sass  --no-source-map assets/sass:assets/css",
    "watch:sass": "sass  --no-source-map --watch assets/sass:assets/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all watch serve",
    "build": "npm-run-all build:*",
    "postbuild": "postcss public/assets/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halfpintutopia/whack-a-marmot.git"
  },
  "author": "Siriny Richardson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/halfpintutopia/whack-a-marmot/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "sass": "^1.57.1"
  }
}
